<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- User MG-->
        <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']/group" position="inside">
                    <field name="employee_id" readonly="1" required="0"   attrs="{'invisible': [('employee_id', '=', False)]}"/>
                </xpath>              
            </field>
        </record>
 

        
        
        <!-- Employee Form MG -->
        <record id="employee_view_allocation_employee" model="ir.ui.view">
            <field name="name">employee.view.from.inherit.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="history_employee.hr_employee_history_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='job_start_date']" position="after">
                    <field name="years_of_experience" />
                    <field name="leave_date" />
                    <field name="manual_allocation" />
                </xpath> 
            </field>
        </record>
        
        <record id="employee_view_form_inherit_create_user_from_employee" model="ir.ui.view">
            <field name="name">employee.view.from.inherit.create.user.from.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="create_user"  groups="hr.group_hr_user" string="Create User" type="object" class="oe_highlight"
                                attrs="{'invisible': [('user_id', '!=', False)]}"/>
                    </header>
                </xpath>

                <field name="work_email" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>        
    </data>
</odoo>